{
  "extends": "gts/tslint.json",
  "rules": {
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "indent": [
      true,
      "spaces",
      4
    ],
    "max-len": [
      "error",
      120
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ]
  }
}